<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingsbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/male_avatar"
                            android:layout_gravity="center"
                            app:civ_border_width="0dp"
                            app:civ_border_color="#00000000"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/change_image_icon"
                                android:id="@+id/change_image_icon"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_full_name"
                        android:text="Random JÃ¡nos"
                        android:textColor="@color/input_color"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>


                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/accounts"
                    android:textColor="@color/input_color"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/tw__light_gray"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:id="@+id/face_connect"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/facebook_connect"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add_account"
                        android:textColor="@color/input_color"
                        android:layout_weight=".90"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:id="@+id/twitter_connect_trig"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/twitter_connect"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add_account"
                        android:textColor="@color/input_color"
                        android:layout_weight=".90"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/user_information"
                    android:textColor="@color/input_color"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/tw__light_gray"/>


                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:id="@+id/user_data_edit"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/name_icon"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_data"
                        android:textColor="@color/input_color"
                        android:layout_weight=".90"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:id="@+id/email_change"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/email_icon"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/email_change"
                        android:textColor="@color/input_color"
                        android:id="@+id/email_change_txt"
                        android:layout_weight=".90"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:id="@+id/password_change"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pw_icon"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/password_change"
                        android:textColor="@color/input_color"
                        android:id="@+id/password_change_txt"
                        android:layout_weight=".90"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/notification"
                    android:textColor="@color/input_color"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/tw__light_gray"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:id="@+id/notification_control"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/notification_icon"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_management"
                        android:textColor="@color/input_color"
                        android:layout_weight=".90"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textColor="@color/input_color"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/tw__light_gray"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/location_icon"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/localespiner"
                        style="@style/spinner_style_settings"
                        android:layout_weight=".80"
                        android:layout_gravity="center_vertical"
                        android:popupBackground="@color/input_bg_settings"
                        android:gravity="center_vertical"
                        android:textColor="@color/input_color"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:textColor="@color/input_color"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/tw__light_gray"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/language_icon"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white_overlay"
                        android:layout_weight=".10"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:scaleX="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/languagespiner"
                        style="@style/spinner_style_settings"
                        android:layout_weight=".80"
                        android:layout_gravity="center_vertical"
                        android:popupBackground="@color/input_bg_settings"
                        android:gravity="center_vertical"
                        android:textColor="@color/input_color"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"/>

                </LinearLayout>

                <com.twitter.sdk.android.core.identity.TwitterLoginButton
                    android:id="@+id/twitter_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Twitter Connect"
                    android:visibility="gone"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
    <eu.fest.view.ScrimInsetsFrameLayout
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:insetForeground="#4000"
        android:elevation="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <fragment
            android:id="@+id/fragment_drawer"
            android:name="eu.fest.fragments.NavigationDrawerFragment"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/leftmenu_fragment"
            tools:layout="@layout/leftmenu_fragment" />
    </eu.fest.view.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>
